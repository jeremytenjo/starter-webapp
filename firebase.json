{
  "functions": {
    "source": "functions",
    "runtime": "nodejs14"
  },
  "firestore": {
    "rules": "src/services/firebase/firestore.rules",
    "indexes": "src/services/firebase/firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9005
    },
    "functions": {
      "port": 5002
    },
    "firestore": {
      "port": 9002
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  },
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
